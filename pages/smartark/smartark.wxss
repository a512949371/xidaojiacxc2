/* pages/smartark/smartark.wxss */
.smartark-list{
  padding: 0 30rpx;
}
.smartark-box{
  padding: 32rpx;
  margin-top: 26rpx;
  background: url(http://p7grh1j0l.bkt.clouddn.com/xidaojia_guiziList.png) no-repeat top center;
  background-size: 100%;
}
.smartark-name{
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #000;
  padding: 6rpx 0;
}
.smartark-name .left{
  font-size: 32rpx;
}
.smartark-name .right{
  font-size: 30rpx;
}
.smartark-desc{
  padding-top: 30rpx;
  color: #787878;
  font-size: 26rpx;
}
.number-box{
  padding: 15rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between
}
.number-box .number{
  font-size: 26rpx;
  color: #787878;
}
.number-box .add-box{
  font-size: 28rpx;
  color: #5598f5
}
.flex-box{
  display: flex;
  align-items: center
}
.flex-box image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 6rpx;
}