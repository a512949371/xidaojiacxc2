/* pages/orderlist/evaluation/evaluation.wxss */
.star-box{
  display: flex;
  align-items: center;
  padding: 32rpx 20rpx;
}
.star-one{
  width: 200rpx;
  font-size: 30rpx;
  color: #000
}
.star-img{
  flex: 1;
}
.star-img .star{
  flex: 1
}
.flex-box-center{
  display: flex;
  align-items: center;
  justify-content: center;
}
.red{
  width: 41rpx;
  height: 41rpx;
}
.dark{
  width: 41rpx;
  height: 41rpx;
}
.star-desc{
  width: 100rpx;
  font-size: 28rpx;
  color: #646464;
}
.evaluation-box{
  border-top: 4rpx solid #f0f0f0;
  padding: 60rpx 20rpx;
}
.evaluation-tit{
  text-align: center;
  font-size: 30rpx;
  color: #000;
  padding-bottom: 32rpx;
}
.label-box{
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap:wrap;
  padding-bottom: 20rpx;
}
.label{
  width: 196rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top:34rpx;
  font-size: 24rpx;
  text-align: center;
  margin-left: 12rpx;
  margin-right: 12rpx;
  border: 1px solid #c8c8c8;
  border-radius: 60rpx;
  color: #cbcbcb;
  box-sizing: border-box
}
.label.active{
  border-color: #6d83f0;
  background-color: #6d83f0;
  color: #FFF;
}
.said{
  display: flex;
  font-size: 28rpx;
  padding: 10rpx;
}
.said .desc{
  padding-right: 20rpx;
}
.said .textare-box{
 flex: 1
}
.said .textare-box textarea{
  width: 100%;
  height: 160rpx;
  font-size: 28rpx;
  color: #969696
}
.btn-box{
  margin-top: 46rpx;
  display: flex;
  justify-content: center
}
.btn{
  width: 95%;
  padding: 20rpx 0;
  border-radius: 15rpx;
  background-color: #37d091;
  color: #FFF;
  font-size: 36rpx;
  text-align: center
}