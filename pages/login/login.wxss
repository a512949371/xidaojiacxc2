/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 96rpx;
}

.userinfo-avatar {
  width: 315rpx;
  height: 137rpx;
}

.userinfo-nickname {
  color: #aaa;
}
.btn-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 20px;
}
.close-city{
  color: #666
}
.true-city{
  color:green
}
.mt10{
  margin-top: 20rpx
}
.mt20{
    margin-top: 40rpx;
}
.mt40{
    margin-top: 80rpx;
}
.mt60{
